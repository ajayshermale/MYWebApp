@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary" >Category</h2>
            <hr />

        </div>
        <input type="hidden" asp-for="Id" />
        <div class="row pb-3">
            <input disabled asp-for="Name" class="form-control" />

        </div>
        <div class="row pb-3">
            <input disabled asp-for="DisplayOrder" class="form-control" />
        </div>

        <button class="btn btn-danger" type="submit">Delete</button>

    </div>
    <a asp-action="Index" asp-controller="Category">Back To List</a>

</form>